{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "tabWidth": 2,
              "singleQuote": false,
              "printWidth": 100,
              "semi": true,
              "usePrettierrc": false
            }
        ]
    }
  }